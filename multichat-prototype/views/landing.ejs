<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatSphere | Real-Time Communication Prototype</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0f;
            color: #ffffff;
            overflow-x: hidden;
            position: relative;
        }

        .gradient-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(45deg, #0a0a0f, #1a1a2e, #16213e, #0f3460);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .particle {
            position: absolute;
            width: 3px;
            height: 3px;
            background: rgba(88, 101, 242, 0.5);
            border-radius: 50%;
            animation: float 20s infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) translateX(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) translateX(50px); opacity: 0; }
        }

        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem;
            opacity: 0;
            animation: fadeIn 1s ease forwards;
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        .hero h1 {
            font-size: 4rem;
            font-weight: 700;
            background: linear-gradient(135deg, #5865f2, #7289da, #57f287);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            animation: slideDown 0.8s ease forwards;
            opacity: 0;
            animation-delay: 0.3s;
        }

        @keyframes slideDown {
            from { transform: translateY(-30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .hero p {
            font-size: 1.3rem;
            color: #b9bbbe;
            margin-bottom: 3rem;
            max-width: 600px;
            animation: slideDown 0.8s ease forwards;
            opacity: 0;
            animation-delay: 0.5s;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
            animation: slideUp 0.8s ease forwards;
            opacity: 0;
            animation-delay: 0.7s;
        }

        @keyframes slideUp {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .btn {
            padding: 0.9rem 2rem;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn span {
            position: relative;
            z-index: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, #5865f2, #7289da);
            color: white;
            box-shadow: 0 8px 20px rgba(88, 101, 242, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(88, 101, 242, 0.6);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 2px solid rgba(88, 101, 242, 0.5);
            backdrop-filter: blur(10px);
        }

        .btn-secondary:hover {
            background: rgba(88, 101, 242, 0.2);
            border-color: #5865f2;
            transform: translateY(-2px);
        }

        .chat-section {
            max-width: 1200px;
            margin: 4rem auto;
            padding: 2rem;
        }

        .chat-container {
            background: rgba(30, 31, 34, 0.8);
            border-radius: 20px;
            padding: 2rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(88, 101, 242, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .chat-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .chat-header h2 {
            font-size: 1.8rem;
            color: #5865f2;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            background: #57f287;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .chat-messages {
            height: 400px;
            overflow-y: auto;
            margin-bottom: 1.5rem;
            padding-right: 1rem;
        }

        .chat-messages::-webkit-scrollbar {
            width: 8px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: #5865f2;
            border-radius: 10px;
        }

        .message {
            margin-bottom: 1rem;
            animation: messageSlide 0.3s ease;
        }

        @keyframes messageSlide {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .message.user {
            text-align: right;
        }

        .message.system {
            text-align: center;
        }

        .message-bubble {
            display: inline-block;
            padding: 0.8rem 1.2rem;
            border-radius: 18px;
            max-width: 70%;
            word-wrap: break-word;
        }

        .message.other .message-bubble {
            background: rgba(88, 101, 242, 0.2);
            border: 1px solid rgba(88, 101, 242, 0.3);
            text-align: left;
        }

        .message.user .message-bubble {
            background: linear-gradient(135deg, #5865f2, #7289da);
            text-align: right;
        }

        .message.system .message-bubble {
            background: transparent;
            color: #72767d;
            font-style: italic;
            font-size: 0.9rem;
        }

        .message-author {
            font-weight: 600;
            color: #5865f2;
            margin-bottom: 0.3rem;
            font-size: 0.9rem;
        }

        .chat-input-container {
            display: flex;
            gap: 1rem;
        }

        .chat-input {
            flex: 1;
            padding: 1rem;
            background: rgba(0, 0, 0, 0.4);
            border: 2px solid rgba(88, 101, 242, 0.3);
            border-radius: 12px;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .chat-input:focus {
            outline: none;
            border-color: #5865f2;
            box-shadow: 0 0 20px rgba(88, 101, 242, 0.3);
        }

        .send-btn {
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #5865f2, #7289da);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .send-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(88, 101, 242, 0.5);
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
            animation: fadeIn 0.3s ease;
        }

        .modal-content {
            background: #1e1f22;
            padding: 2.5rem;
            border-radius: 20px;
            max-width: 600px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
            position: relative;
            border: 2px solid rgba(88, 101, 242, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            animation: modalSlide 0.3s ease;
        }

        @keyframes modalSlide {
            from { transform: translateY(-30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .modal-header h2 {
            color: #5865f2;
            font-size: 1.8rem;
        }

        .close-btn {
            background: none;
            border: none;
            color: #72767d;
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .close-btn:hover {
            color: #ffffff;
            transform: rotate(90deg);
        }

        .help-content {
            line-height: 1.8;
            color: #b9bbbe;
        }

        .help-content h3 {
            color: #5865f2;
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .help-content ul {
            margin-left: 1.5rem;
            margin-top: 0.5rem;
        }

        .help-content li {
            margin-bottom: 0.5rem;
        }

        footer {
            text-align: center;
            padding: 2rem;
            color: #72767d;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 4rem;
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .button-group {
                flex-direction: column;
                width: 100%;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .chat-messages {
                height: 300px;
            }

            .message-bubble {
                max-width: 85%;
            }
        }
    </style>
</head>
<body>
    <div class="gradient-bg"></div>
    <div class="particles" id="particles"></div>

    <section class="hero">
        <h1>Welcome to ChatSphere</h1>
        <p>Experience real-time communication with WebSockets and Socket.IO</p>
        
        <div class="button-group">
            <a href="/chat" target="_blank" class="btn btn-primary">
                <span><i class="fas fa-play"></i> Launch Chat App</span>
            </a>
            <button class="btn btn-secondary" onclick="downloadSource()">
                <span><i class="fas fa-download"></i> Download Source Code</span>
            </button>
            <button class="btn btn-secondary" onclick="openModal('helpModal')">
                <span><i class="fas fa-question-circle"></i> How It Works</span>
            </button>
            <button class="btn btn-secondary" onclick="openModal('devModal')">
                <span><i class="fas fa-code"></i> Developers</span>
            </button>
        </div>
    </section>

    <section class="chat-section">
        <div class="chat-container">
            <div class="chat-header">
                <h2><i class="fas fa-comments"></i> Live Chat Preview</h2>
                <div class="status-dot"></div>
                <span style="color: #57f287;">Demo Mode</span>
            </div>
            
            <div class="chat-messages" id="chatMessages">
                <div class="message system">
                    <div class="message-bubble">Welcome to ChatSphere demo! This is a simulated preview.</div>
                </div>
            </div>
            
            <div class="chat-input-container">
                <input type="text" class="chat-input" id="chatInput" placeholder="Type a message to test..." onkeypress="handleKeyPress(event)">
                <button class="send-btn" onclick="sendMessage()">
                    <i class="fas fa-paper-plane"></i> Send
                </button>
            </div>
        </div>
    </section>

    <!-- Help Modal -->
    <div class="modal" id="helpModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-info-circle"></i> How ChatSphere Works</h2>
                <button class="close-btn" onclick="closeModal('helpModal')">&times;</button>
            </div>
            <div class="help-content">
                <p>ChatSphere is a real-time communication platform with admin-controlled room access.</p>
                
                <h3><i class="fas fa-shield-alt"></i> Admin-Controlled Access</h3>
                <ul>
                    <li><strong>Room Codes:</strong> Admins create secure room codes</li>
                    <li><strong>Approval System:</strong> Users request to join, admins approve/reject in real-time</li>
                    <li><strong>User Management:</strong> Admins can remove users at any time</li>
                </ul>
                
                <h3><i class="fas fa-bolt"></i> Real-Time Communication</h3>
                <p>Uses WebSocket protocol via Socket.IO for bi-directional messaging.</p>
                
                <h3><i class="fas fa-server"></i> Technology Stack</h3>
                <ul>
                    <li><strong>Backend:</strong> Node.js + Express.js</li>
                    <li><strong>Real-Time:</strong> Socket.IO</li>
                    <li><strong>Frontend:</strong> Vanilla JavaScript (ES6+)</li>
                </ul>
                
                <h3><i class="fas fa-rocket"></i> Features</h3>
                <ul>
                    <li>Automatic port fallback (handles port conflicts)</li>
                    <li>Graceful disconnect handling</li>
                    <li>Real-time notifications</li>
                    <li>Dynamic user list updates</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Developers Modal -->
    <div class="modal" id="devModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-user-friends"></i> Meet the Developers</h2>
                <button class="close-btn" onclick="closeModal('devModal')">&times;</button>
            </div>
            <div class="help-content" style="text-align: center;">
                <div style="margin: 2rem 0;">
                    <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
                        <div style="flex: 1; min-width: 200px;">
                            <div style="width: 100px; height: 100px; margin: 0 auto; border-radius: 50%; background: linear-gradient(135deg, #5865f2, #7289da); display: flex; align-items: center; justify-content: center; font-size: 2.5rem; font-weight: 700;">A</div>
                            <h3 style="margin-top: 1rem; color: #5865f2;">Arnav</h3>
                            <p style="color: #b9bbbe;">Full-Stack Developer</p>
                        </div>
                        <div style="flex: 1; min-width: 200px;">
                            <div style="width: 100px; height: 100px; margin: 0 auto; border-radius: 50%; background: linear-gradient(135deg, #7289da, #57f287); display: flex; align-items: center; justify-content: center; font-size: 2.5rem; font-weight: 700;">A</div>
                            <h3 style="margin-top: 1rem; color: #5865f2;">Ashwin</h3>
                            <p style="color: #b9bbbe;">Full-Stack Developer</p>
                        </div>
                    </div>
                </div>
                <p style="margin-top: 2rem;">Developed for DA1 Project Submission</p>
            </div>
        </div>
    </div>

    <footer>
        <p>Â© 2025 ChatSphere | Developed by Arnav & Ashwin | DA1 Project Submission</p>
    </footer>

    <script>
        // Generate particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        const chatMessages = document.getElementById('chatMessages');
        const chatInput = document.getElementById('chatInput');

        function sendMessage() {
            const message = chatInput.value.trim();
            if (message) {
                addMessage('You', message, 'user');
                chatInput.value = '';
            }
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') sendMessage();
        }

        function addMessage(author, text, type = 'other') {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            
            if (type === 'system') {
                messageDiv.innerHTML = `<div class="message-bubble">${text}</div>`;
            } else {
                const authorHtml = type === 'other' ? `<div class="message-author">${author}</div>` : '';
                messageDiv.innerHTML = `${authorHtml}<div class="message-bubble">${text}</div>`;
            }
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function simulateMessages() {
            const messages = ['This looks amazing!', 'Real-time features work great!', 'Love the admin system!'];
            const users = ['Arnav', 'Ashwin'];
            
            setInterval(() => {
                if (Math.random() > 0.5) {
                    const user = users[Math.floor(Math.random() * users.length)];
                    const message = messages[Math.floor(Math.random() * messages.length)];
                    addMessage(user, message, 'other');
                }
            }, 8000);
        }

        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        function downloadSource() {
            alert('Download functionality: Create a ZIP with server.js, views folder, and package.json');
        }

        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    modal.classList.remove('active');
                }
            });
        }

        window.onload = function() {
            createParticles();
            simulateMessages();
            setTimeout(() => addMessage('Arnav', 'Welcome to ChatSphere! Click "Launch Chat App" to start.', 'other'), 2000);
        }
    </script>
</body>
</html>